{
    "compilerOptions": {
        "baseUrl": "",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es2015", "dom"],
        "module": "es2015",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "sourceMap": true,
        "stripInternal": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "awesomeTypescriptLoaderOptions": {
        "forkChecker": true
    }
}
